{
  "name": "Charlie Parker",
  "version": "0.1",
  "manifest_version": 1,
  "description": "Listen to your browser make requests.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["functions.js", "charlie.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ]
}